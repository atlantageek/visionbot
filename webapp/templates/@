    <div class="row">
      <div class="col-md-3">
        <button id="left" class="btn btn-default">Left</button>
      <div>
      <div class="col-md-3">
        <button id="go" class="btn btn-default">Straight</button>
      <div>
      <div class="col-md-3">
        <button id="right" class="btn btn-default">Right</button>
